{% extends 'base.html.twig' %}

{% block title %}Citation du Jour{% endblock %}

{% block body %}
    <div class="container d-flex flex-column align-items-center justify-content-center vh-100">
        <div class="card shadow-lg p-4 text-center citation-card">
            <h2 class="mb-4 text-primary">ğŸ“– Citation du Jour</h2>

            <blockquote class="blockquote">
                <p class="mb-3 text-dark fs-4 fst-italic">"{{ citation.getText() }}"</p>
            </blockquote>

            <footer class="blockquote-footer">
                <span class="fw-bold">{{ citation.getAuthor().getName() }}</span>
                <br>
                <span class="text-muted">ğŸ“š {{ citation.getBook().getTitle() }}</span>
            </footer>

            <div class="mt-4">
                <a href="{{ path('random_citation') }}" class="btn btn-primary">ğŸ”„ Nouvelle citation</a>
            </div>

            {% if app.user %}
                <div class="mt-4">
                    <button id="explain-btn" class="btn btn-info">ğŸ’¡ Expliquer par l'IA</button>
                </div>
            {% endif %}
        </div>

        {% if app.user %}
            <div id="explanation-container" class="mt-4 p-3 w-75 text-center border rounded bg-light d-none">
                <div id="loading" class="d-none">
                    <span class="spinner-border spinner-border-sm text-primary"></span> Analyse en cours...
                </div>
                <p id="explanation-text" class="text-dark mt-3"></p>
            </div>
        {% endif %}

        <div class="mt-4">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="btn btn-danger">ğŸšª Se dÃ©connecter</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-primary me-2">ğŸ”‘ Se connecter</a>
                <a href="{{ path('app_register') }}" class="btn btn-outline-success">ğŸ“ CrÃ©er un compte</a>
            {% endif %}
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const explainBtn = document.getElementById("explain-btn");
            const explanationContainer = document.getElementById("explanation-container");
            const explanationText = document.getElementById("explanation-text");
            const loadingIndicator = document.getElementById("loading");

            if (explainBtn) {
                explainBtn.addEventListener("click", function () {
                    explanationContainer.classList.remove("d-none");
                    explanationText.innerHTML = "";
                    loadingIndicator.classList.remove("d-none");

                    fetch("{{ path('explain_citation') }}", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            "X-Requested-With": "XMLHttpRequest"
                        },
                        body: JSON.stringify({
                            citation: "{{ citation.getText() }}",
                            author: "{{ citation.getAuthor().getName() }}",
                            book: "{{ citation.getBook().getTitle() }}"
                        })
                    })
                        .then(response => response.json())
                        .then(data => {
                            loadingIndicator.classList.add("d-none");
                            explanationText.innerHTML = data.explanation;
                        })
                        .catch(error => {
                            loadingIndicator.classList.add("d-none");
                            explanationText.innerHTML = "âŒ Une erreur est survenue.";
                        });
                });
            }
        });
    </script>
{% endblock %}
